{% extends 'base.html.twig' %}

{% block body %}
    {% for flash_message in app.session.flashBag %}
        <div class="flash-notice">
            {{ flash_message }}
        </div>
    {% endfor %}
    <table class="table table-hover">
        <thead>
        <tr>
            <th>#</th>
            <th>Title</th>
            <th>Author</th>
            <th>Action</th>
        </tr>
        </thead>
        <tbody>
        {% for book in books %}
            <tr>
                <th scope="row">{{ book.id }}</th>
                <td>{{ book.description }}</td>
                <td>Dan</td>
                <td>
                    <a href="{{ path('edit', {'id': book.id} ) }}" class="btn btn-success">Edit</a>
                    <a href="{{ path('delete', {'id': book.id} ) }}" class="btn btn-danger">Del</a>
                    <a href="{{ path('get', {'id': book.id} ) }}" class="btn btn-warning">Get</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
